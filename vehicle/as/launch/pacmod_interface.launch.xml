<?xml version="1.0"?>
<launch>

  <arg name="pacmod_param_path" default="$(find-pkg-share as)/config/pacmod_param.yaml"/>

  <arg name="vehicle_info_param" default="$(find-pkg-share lexus_description)/config/vehicle_info.yaml" />

  <!-- pacmod interface -->
  <node pkg="as" exec="pacmod_interface" name="pacmod_interface" output="screen">
    <param name="use_sim_time" value="$(env AW_ROS2_USE_SIM_TIME false)"/>
    <param from="$(var vehicle_info_param)" />
    <param from="$(var pacmod_param_path)" />
  </node>

</launch>
