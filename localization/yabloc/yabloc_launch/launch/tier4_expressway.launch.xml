<launch>
    <arg name="standalone" default="true" description="Set to true if not connected to Autoware's P/C."/>

    <include file="$(find-pkg-share yabloc_launch)/launch/yabloc.launch.xml">
        <arg name="standalone" value="$(var standalone)"/>

        <arg name="graph_segment_param_path" value="$(find-pkg-share yabloc_launch)/config/expressway/graph_segment.param.yaml"/>
        <arg name="segment_filter_param_path" value="$(find-pkg-share yabloc_launch)/config/expressway/segment_filter.param.yaml"/>
        <arg name="ll2_decomposer_param_path" value="$(find-pkg-share yabloc_launch)/config/expressway/ll2_decomposer.param.yaml"/>
        <arg name="gnss_particle_corrector_param_path" value="$(find-pkg-share yabloc_launch)/config/expressway/gnss_particle_corrector.param.yaml"/>
        <arg name="predictor_param_path" value="$(find-pkg-share yabloc_launch)/config/expressway/predictor.param.yaml"/>
        <arg name="twist_estimator_param_path" value="$(find-pkg-share yabloc_launch)/config/expressway/twist_estimator.param.yaml"/>
    </include>
</launch>
