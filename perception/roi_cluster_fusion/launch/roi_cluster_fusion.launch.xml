<launch>
  <arg name="input_rois_number" default="1"/>
  <arg name="input_rois0" default="rois0"/>
  <arg name="input_camera_info0" default="/camera_info"/>
  <arg name="input_rois1" default="rois1"/>
  <arg name="input_camera_info1" default="/camera_info1"/>
  <arg name="input_rois2" default="rois2"/>
  <arg name="input_camera_info2" default="/camera_info2"/>
  <arg name="input_rois3" default="rois3"/>
  <arg name="input_camera_info3" default="/camera_info3"/>
  <arg name="input_rois4" default="rois4"/>
  <arg name="input_camera_info4" default="/camera_info4"/>
  <arg name="input_rois5" default="rois5"/>
  <arg name="input_camera_info5" default="/camera_info5"/>
  <arg name="input_rois6" default="rois6"/>
  <arg name="input_camera_info6" default="/camera_info6"/>
  <arg name="input_rois7" default="rois7"/>
  <arg name="input_camera_info7" default="/camera_info7"/>
  <arg name="input_clusters" default="clusters"/>
  <arg name="output" default="labeled_clusters"/>



  <node pkg="roi_cluster_fusion" exec="roi_cluster_fusion_node" name="roi_cluster_fusion">
    <rosparam>
            use_iou: true
            use_iou_x: false
            use_iou_y: false
            iou_threshold: 0.35
    </rosparam>
    <!-- <rosparam>
            use_iou: false
            use_iou_x: true
            use_iou_y: false
            iou_threshold: 0.7
        </rosparam> -->
    <remap from="clusters" to="$(var input_clusters)"/>
    <remap if="$(eval input_rois_number >= 1)" from="rois0" to="$(var input_rois0)"/>
    <remap if="$(eval input_rois_number >= 1)" from="camera_info0" to="$(var input_camera_info0)"/>
    <remap if="$(eval input_rois_number >= 2)" from="rois1" to="$(var input_rois1)"/>
    <remap if="$(eval input_rois_number >= 2)" from="camera_info1" to="$(var input_camera_info1)"/>
    <remap if="$(eval input_rois_number >= 3)" from="rois2" to="$(var input_rois2)"/>
    <remap if="$(eval input_rois_number >= 3)" from="camera_info2" to="$(var input_camera_info2)"/>
    <remap if="$(eval input_rois_number >= 4)" from="rois3" to="$(var input_rois3)"/>
    <remap if="$(eval input_rois_number >= 4)" from="camera_info3" to="$(var input_camera_info3)"/>
    <remap if="$(eval input_rois_number >= 5)" from="rois4" to="$(var input_rois4)"/>
    <remap if="$(eval input_rois_number >= 5)" from="camera_info4" to="$(var input_camera_info4)"/>
    <remap if="$(eval input_rois_number >= 6)" from="rois5" to="$(var input_rois5)"/>
    <remap if="$(eval input_rois_number >= 6)" from="camera_info5" to="$(var input_camera_info5)"/>
    <remap if="$(eval input_rois_number >= 7)" from="rois6" to="$(var input_rois6)"/>
    <remap if="$(eval input_rois_number >= 7)" from="camera_info6" to="$(var input_camera_info6)"/>
    <remap if="$(eval input_rois_number >= 8)" from="rois7" to="$(var input_rois7)"/>
    <remap if="$(eval input_rois_number >= 8)" from="camera_info7" to="$(var input_camera_info7)"/>
    <remap from="labeled_clusters" to="$(var output)"/>
    <param name="rois_number" value="$(var input_rois_number)" />
  </node>

</launch>
